{
  // Launch.json file to debug the Dev Environment Scripts
  "version": "0.2.0",
  "configurations": [
    {
      "runtimeArgs": [
        "node_modules/.bin/hardhat",
        "run"
      ],
      "cwd": "${workspaceFolder}/smart-contracts",
      "type": "node",
      "request": "launch",
      "name": "Debug DevENV scripts",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/smart-contracts/scripts/devenv.ts"
    }{{#each sifResults.relayerAddresses}},
    {
      "name": "Debug Relayer-{{@index}}",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "cmd/ebrelayer",
      "envFile": "${workspaceFolder}/smart-contracts/.env",
      "env": {
        {{!-- we cant use @index directly to access array --}}
        {{#with (lookup @root.ethResults.accounts.available @index)}}
        "ETHEREUM_PRIVATE_KEY": "{{subString privateKey 2}}"
        {{/with}}
      },
      "args": [
        "init-relayer",
        "{{@root.ethResults.chainId}}",
        "{{@root.sifResults.tcpurl}}",
        "ws://{{@root.ethResults.httpHost}}:{{@root.ethResults.httpPort}}/",
        "{{@root.contractResults.contractAddresses.bridgeRegistry}}",
        "{{this.name}}",
        "--chain-id",
        "localnet",
        "--node",
        "{{@root.sifResults.tcpurl}}",
        "--keyring-backend",
        "test",
        "--from",
        "{{this.account}}",
        "--symbol-translator-file",
        "${workspaceFolder}/test/integration/config/symbol_translator.json",
        "--relayerdb-path",
        "./relayer-{{@index}}",
        "--home",
        "{{this.homeDir}}"
      ]
    }{{/each}}{{#each sifResults.witnessAddresses}},
    {
      "name": "Debug Witness-{{@index}}",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "cmd/ebrelayer",
      "envFile": "${workspaceFolder}/smart-contracts/.env",
      "env": {
        {{!-- we cant use @index directly to access array --}}
        {{#with (lookup @root.ethResults.accounts.available @index)}}
        "ETHEREUM_PRIVATE_KEY": "{{subString privateKey 2}}"
        {{/with}}
      },
      "args": [
        "init-witness",
        "{{@root.ethResults.chainId}}",
        "{{@root.sifResults.tcpurl}}",
        "ws://{{@root.ethResults.httpHost}}:{{@root.ethResults.httpPort}}/",
        "{{@root.contractResults.contractAddresses.bridgeRegistry}}",
        "{{this.name}}",
        "--chain-id",
        "localnet",
        "--node",
        "{{@root.sifResults.tcpurl}}",
        "--keyring-backend",
        "test",
        "--from",
        "{{this.account}}",
        "--symbol-translator-file",
        "${workspaceFolder}/test/integration/config/symbol_translator.json",
        "--relayerdb-path",
        "./witness-{{@index}}",
        "--home",
        "{{this.homeDir}}"
      ]
    }{{/each}},
    {
      "name": "Debug Sifnoded",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "cmd/sifnoded",
      "envFile": "${workspaceFolder}/smart-contracts/.env",
      "args": [
        "start",
        "--log_format",
        "json",
        "--minimum-gas-prices",
        "0.5rowan",
        "--rpc.laddr",
        "{{@root.sifResults.tcpurl}}",
        "--home",
        "/tmp/sifnodedNetwork/validators/localnet/{{@root.sifResults.validatorValues.[0].moniker}}/.sifnoded"
      ]
    }
  ]
}